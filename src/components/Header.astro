---
const pathname = Astro.url.pathname;
const isActive = (href) => (pathname === href ? 'page' : undefined);
---
<header class="site-header">
  <div class="container nav">
    <a href="/" style="font-weight:700; letter-spacing:.3px; color: var(--color-text); text-decoration:none;">GMACAL風 サンプル</a>
    <nav>
      <a href="/" aria-current={isActive('/')} >トップ</a>
      <a href="/services" aria-current={isActive('/services')} >サービス</a>
      <a href="/company" aria-current={isActive('/company')} >会社情報</a>
      <a href="/news" aria-current={isActive('/news')} >ニュース</a>
      <a href="/contact" aria-current={isActive('/contact')} >お問い合わせ</a>
    </nav>
  </div>
</header>
